@model IEnumerable<MovieRental.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<p>@Html.ActionLink("Add a new movie","FormMovie","Movies",null,new {@class="btn btn-primary" }) </p>
@if (!Model.Any())
{
    <p> Sorry!! we didn't upload any movies yet !!!</p>
}
else 
{ 
<table class="table">
    <tr>
        <th>Name</th>
        <th>Genre</th>
    </tr>

    @foreach (var movie in Model)
    {
<tr>
    <td> @Html.ActionLink(movie.Name, "EditMovie", "Movies", new { id = movie.Id }, null)</td>
    <td>@movie.Genre.Name</td>
</tr>
            }
        
    </table>
}


